{
  "name": "Stay On Task",
  "version": "1.0",
  "description": "An extension that helps you stay on task. ",
  "permissions": ["activeTab","declarativeContent","storage","webRequest","*://*.reddit.com/","*://*.facebook.com/","webRequestBlocking"],
  "background":{
  	"scripts": ["background.js","popup.js"],
  	"persistent": true
  },
  "page_action":{
  	"default_popup": "popup.html",
  	"default_icon":{
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
  	}
  },
  "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
  "manifest_version": 2
}